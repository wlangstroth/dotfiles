[user]
    name = Will Langstroth
    email = will@langstroth.com
[alias]
    a = add -p .
    amend = commit --amend
    br = branch
    ca = commit -av
    cam = commit -am
    ci = commit
    cm = commit -m
    co = checkout
    df = diff --word-diff
    lol = log --pretty=format:"%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]" --decorate --date=short
    lo = log --graph
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    mg = merge --no-ff
    st = status -s
    standup = log --since '1 day ago' --oneline --author will@langstroth.com
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[core]
    editor = vim
    excludesfile = ~/.gitignore
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
[branch]
    autosetupmerge = true
[apply]
    whitespace = strip
[advice]
    statusHints = false
[push]
    default = tracking
[rerere]
    enabled = true
    autoupdate = true
